{
  "compilerOptions": {
    "baseUrl": "./src",
    "typeRoots": ["node_modules/@types"],
    "types": ["node"],
    "paths": {
      "@/*": ["*"],
      "@infra/*": ["infra/*"],
      "@modules/*": ["modules/*"],
      "@shared/*": ["shared/*"],
      "@routes/*": ["routes/*"],
      "@scripts/*": ["scripts/*"]
    },
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "files": ["src/types.d.ts"]
}
